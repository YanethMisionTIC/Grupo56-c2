package petproject.g56;

/**
 *
 * @author YanethM
 */
public class PetProjectG56 {

    //1. Definir los atributos de la clase
    private static String petName = "Dante";
    private static char petSex = 'M';
    private static int age = 3;
    private static String healthStatus = "que esta todo ok";
    private static String breed = "coocker Spaniel";
    private static boolean pedigree = true;
    private static String color = "cafe";
    private static String height = "tamaño mediana";

    //2. Creamos las funciones GETTER de cada uno de los atributos
    public static String getPetName() {
        return petName;
    }

    public static char getPetSex() {
        return petSex;
    }

    public static int getAge() {
        return age;
    }

    public static String getHealthStatus() {
        return healthStatus;
    }

    public static String getBreed() {
        return breed;
    }

    public static boolean isPedigree() {
        return pedigree;
    }

    public static String getColor() {
        return color;
    }

    public static String getHeight() {
        return height;
    }

    //3. Creamos un método que imprime los valores de los atributos
    public static void showPetInformation() {
        //Atajo: sout + TAB
        System.out.println(getPetName() + " es un " + getPetSex() + " de raza " + getBreed() + " y " + getHeight()
                + " de color " + getColor() + ". Tiene " + getAge() + " años y su estado de salud marca "
                + getHealthStatus() + " y " + isPedigree());
    }

    public static void main(String[] args) {
        showPetInformation();
    }
}
